      {% endif %}
      
- id: master_fan_speed
  alias: master_fan_speed
  initial_state: 'off'
  trigger:
  - platform: mqtt
    topic: "/HAwirelesslink/return/fan/king_of_fans_inc_hdc52eastwindfan_0020d39d_1_514/speed"
  action:
  - service:
      fan.set_speed
    data_template:
      speed: "{{ trigger.payload }}"
      entity_id: fan.king_of_fans_inc_hdc52eastwindfan_0020d39d_1_514
